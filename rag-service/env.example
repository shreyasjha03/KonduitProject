# Environment variables for RAG Service

# Database
DATABASE_URL=sqlite:///./data/meta.db

# Crawler settings
DEFAULT_MAX_PAGES=50
DEFAULT_MAX_DEPTH=3
DEFAULT_CRAWL_DELAY_MS=1000
DEFAULT_USER_AGENT=RAG-Crawler/1.0 (+https://example.com/bot)

# Chunking settings
DEFAULT_CHUNK_SIZE=800
DEFAULT_CHUNK_OVERLAP=100

# Retrieval settings
DEFAULT_TOP_K=5

# Ollama settings
OLLAMA_BASE_URL=http://localhost:11434
EMBEDDING_MODEL=llama3.2
CHAT_MODEL=llama3.2

# Vector storage
FAISS_INDEX_PATH=./data/index.faiss
